<h1>Add</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input type="text" id="title" name="title" class="validate" required />
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Write name"></span>
    </div>
    <div class="input-field">
        <input type="number" id="price" name="price" class="validate" required min=1 />
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Write price"></span>
    </div>
    <div class="input-field">
        <input type="text" id="img" name="img" class="validate" required />
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Write image URL"></span>
    </div>

    <button class="btn btn-primary">Add course</button>

</form>