<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input type="text" id="title" name="title" class="validate" value="{{course.title}}" required />
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Write name"></span>
    </div>
    <div class="input-field">
        <input type="number" id="price" name="price" class="validate" value="{{course.price}}" required min=1 />
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Write price"></span>
    </div>
    <div class="input-field">
        <input type="text" id="img" name="img" class="validate" value="{{course.img}}" required />
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Write image URL"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Edit course</button>

</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red" type="submit"> Delete course</button>
</form>